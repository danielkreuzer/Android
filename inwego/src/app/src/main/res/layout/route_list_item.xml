<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark">
    <TextView
        android:id="@+id/txt_address"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="start|center_vertical"
        android:textColor="@android:color/black"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_person_pin_circle_black_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_delete_waypoint"/>

    <ImageButton
        tools:ignore="ContentDescription"
        android:id="@+id/btn_delete_waypoint"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_delete_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/txt_address"
        app:layout_constraintTop_toTopOf="@id/txt_address"
        app:layout_constraintLeft_toRightOf="@id/txt_address"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/btn_delete_waypoint" />
</android.support.constraint.ConstraintLayout>